<form>
  <div class="form-group">
    <label for="title">Title (0..100)</label>
    <input id="title" class="form-control" name="title" placeholder="Post title">
    <span class="help-block hidden"></span>
  </div>
  <div class="form-group">
    <label for="body">Body (200..5000)</label>
    <input id="body" class="form-control" name="body" placeholder="Post body">
    <span class="help-block hidden"></span>
  </div>
  <div class="form-group">
    <label for="date">Date (YYYY-MM-DD)</label>
    <input id="date" class="form-control" name="date" placeholder="Post date">
    <span class="help-block hidden"></span>
  </div>

  <button id="btn-save" type="submit" class="btn btn-primary">Save post</button>
</form>
